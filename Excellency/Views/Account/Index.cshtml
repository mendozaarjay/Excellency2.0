@model Excellency.ViewModels.AccountIndexViewModel
@{
    ViewData["Title"] = "User Accounts";
}

<div class="panel panel-headline">
    <div class="panel-heading">
        <h3 class="panel-title">User Accounts</h3>
        <div class="right">
            <a asp-controller="Account" asp-action="Register" class="btn" role="button">Add New</a>
        </div>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th hidden="hidden">Id</th>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Company</th>
                        <th>Branch</th>
                        <th>Department</th>
                        <th scope="col" class="col-md-1"></th>
                        <th scope="col" class="col-md-1"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.Accounts)
                    {
                        <tr>
                            <td hidden="hidden">@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Position</td>
                            <td>@item.Company</td>
                            <td>@item.Branch</td>
                            <td>@item.Department</td>
                            <td></td>
                            <td></td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

