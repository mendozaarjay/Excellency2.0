    <script type="text/javascript">
        $(function () {
            $(".chosen-select").chosen(

            );
        });
    </script>
    <script type="text/javascript">
        $('#post').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            var id = button.data('id')
            var modal = $(this)
            modal.find('.modal-body input').val(id)
        })
    </script>B
