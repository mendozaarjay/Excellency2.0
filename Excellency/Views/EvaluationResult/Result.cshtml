@model Excellency.ViewModels.EvaluationResultViewModel
@{
    ViewData["Title"] = "Result";
}

<div class="panel panel-headline">
    <div class="panel-heading">
        <h3 class="panel-title">Evaluation Result for : @Model.InterpretationPerEmployee.Name </h3>
    </div>
    <div class="panel-body">
        <strong>Total Score : </strong> <p>@Model.InterpretationPerEmployee.Score.ToString("N2")</p>
        <strong>Interpretation : </strong> <p>@Model.InterpretationPerEmployee.Title</p>
        <strong>Description : </strong> <p>@Model.InterpretationPerEmployee.Description</p>
        <strong>Score From : </strong> <p><i>@Model.InterpretationPerEmployee.ScoreFrom</i></p>
        <strong>Score To : </strong> <p><i>@Model.InterpretationPerEmployee.ScoreTo</i></p>
        <hr />
        <h3>Evaluation Summary</h3>
        <div class="table-responsive">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Name</th>
                        <th>Total Score</th>
                        <th>Total Weight</th>
                        <th>Converted Score</th>
                        <th>Weighted Score</th>
                        <th>Percentage</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.EvaluationResultItems)
                    {
                    <tr>
                        <td>@item.Type</td>
                        <td>@item.Name</td>
                        <td>@item.TotalScore.ToString("N2")</td>
                        <td>@item.TotalWeight.ToString("N2")</td>
                        <td>@item.ConvertedScore.ToString("N2")</td>
                        <td>@item.WeightedScore.ToString("N2")</td>
                        <td>@item.Percentage.ToString("N2")</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
