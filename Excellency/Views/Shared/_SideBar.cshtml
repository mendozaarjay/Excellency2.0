@model Excellency.ViewModels.CurrentUserViewModel
<div class="sidebar-scroll">
    <nav>
        <ul class="nav">
            @if (Model.UserAccess.Dashboard)
            {
                <li><a asp-controller="Home" asp-action="Index" class="active"><i class="lnr lnr-home"></i> <span>Dashboard</span></a></li>
            }
            @if (Model.UserAccess.Maintenance)
            {
                <li>
                    <a href="#systemsettings" data-toggle="collapse" class="collapsed"><i class="lnr lnr-list"></i> <span>Maintenance</span> <i class="icon-submenu lnr lnr-chevron-left"></i></a>
                    <div id="systemsettings" class="collapse ">
                        <ul class="nav">
                            @if (Model.UserAccess.Company)
                            {
                                <li><a asp-controller="Company" asp-action="Index" class="">Company</a></li>
                            }
                            @if (Model.UserAccess.Branch)
                            {
                                <li><a asp-controller="Branch" asp-action="Index" class="">Branch</a></li>
                            }
                            @if (Model.UserAccess.Department)
                            {
                                <li><a asp-controller="Department" asp-action="Index" class="">Department</a></li>
                            }
                            @if (Model.UserAccess.Position)
                            {
                                <li><a asp-controller="Position" asp-action="Index" class="">Position</a></li>
                            }
                            @if (Model.UserAccess.EmployeeCategory)
                            {
                                <li><a asp-controller="EmployeeCategory" asp-action="Index" class="">Employee Category</a></li>
                            }
                            <li><a asp-controller="EvaluationSeason" asp-action="Index" class="">Evaluation Period</a></li>
                        </ul>
                    </div>
                </li>
            }

            @if (Model.UserAccess.Settings)
            {
                <li>
                    <a href="#settings" data-toggle="collapse" class="collapsed"><i class="lnr lnr-cog"></i> <span>Settings</span> <i class="icon-submenu lnr lnr-chevron-left"></i></a>
                    <div id="settings" class="collapse ">
                        <ul class="nav">
                            @if (Model.UserAccess.RatingTable)
                            {
                                <li><a asp-controller="RatingTable" asp-action="Index" class="">Rating Table</a></li>
                            }
                            @if (Model.UserAccess.KeyResultArea)
                            {
                                <li><a asp-controller="KeyResultArea" asp-action="Index" class="">Key Results Area</a></li>
                            }
                            @if (Model.UserAccess.BehavioralKRA)
                            {
                                <li><a asp-controller="BehavioralFactor" asp-action="Index" class="">Behavioral KRA</a></li>
                            }
                            @if (Model.UserAccess.PeerCriteria)
                            {
                                <li><a asp-controller="PeerCriteria" asp-action="Index" class="">Peer Evaluation Criteria</a></li>
                                <li><a asp-controller="PeerAssignment" asp-action="Index" class="">Peer Assignment</a></li>
                            }
                            @if (Model.UserAccess.EmployeeKRAAssignment)
                            {
                                <li><a asp-controller="EmployeeAssignment" asp-action="Index" class="">Employee KRA Assignment</a></li>
                            }
                            <li><a asp-controller="Interpretation" asp-action="Index" class="">Interpretation</a></li>

                        </ul>
                    </div>
                </li>
            }
            @if (Model.UserAccess.Accounts)
            {
                <li>
                    <a href="#user" data-toggle="collapse" class="collapsed"><i class="lnr lnr-user"></i> <span>Accounts</span> <i class="icon-submenu lnr lnr-chevron-left"></i></a>
                    <div id="user" class="collapse ">
                        <ul class="nav">
                            @if (Model.UserAccess.Users)
                            {
                                <li><a asp-controller="Account" asp-action="Index" class="">Users</a></li>
                            }
                            @if (Model.UserAccess.UserRoles)
                            {
                                <li><a asp-controller="AccountRole" asp-action="Index" class="">User Roles</a></li>
                            }
                            @if (Model.UserAccess.ApproverAssignment)
                            {
                                @*<li><a asp-controller="ApproverAssignment" asp-action="Index" class="">Approver Assignment</a></li>*@
                                <li><a asp-controller="ApprovalLevel" asp-action="Index" class="">Approver Level</a></li>
                            }
                            @if (Model.UserAccess.RaterAssignment)
                            {
                                <li><a asp-controller="RaterAssignment" asp-action="RaterList" class="">Rater Assignment</a></li>
                            }
                        </ul>
                    </div>
                </li>
            }
            @if (Model.UserAccess.Evaluation)
            {
                <li>
                    <a href="#rating" data-toggle="collapse" class="collapsed"><i class="lnr lnr-star"></i> <span>Evaluation</span> <i class="icon-submenu lnr lnr-chevron-left"></i></a>
                    <div id="rating" class="collapse ">
                        <ul class="nav">
                            @if (Model.UserAccess.CreateEvaluation)
                            {
                                <li><a asp-controller="Evaluation" asp-action="Index" class="">Create New</a></li>
                                <li><a asp-controller="Recommendation" asp-action="Index" class="">Recommendation</a></li>
                            }
                            @if (Model.UserAccess.Approval)
                            {
                                <li><a asp-controller="Approval" asp-action="Index" class="">Approval</a></li>
                            }
                            <li><a asp-controller="EvaluationResult" asp-action="Index" class="">Evaluation Result</a></li>

                        </ul>
                    </div>
                </li>
            }
            <li>
                <a href="#peerevaluation" data-toggle="collapse" class="collapsed"><i class="lnr lnr-star"></i> <span>Peer Evaluations</span> <i class="icon-submenu lnr lnr-chevron-left"></i></a>
                <div id="peerevaluation" class="collapse ">
                    <ul class="nav">
                        <li><a asp-controller="PeerEvaluation" asp-action="Index" class="">Evaluations</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    </nav>
</div>