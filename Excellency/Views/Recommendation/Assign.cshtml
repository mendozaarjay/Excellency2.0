@model Excellency.ViewModels.RecommendationItem
@{
    ViewData["Title"] = "Assign";
}
@if (!Model.IsWithActiveSeason)
{

    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
        <i class="fa fa-times-circle"></i> There's no active evaluation season. Please inform your administrator.
    </div>
}
<div class="panel panel-headline">
    <div class="panel-heading">
        <h3 class="panel-title">Recommendations for : @Model.EmployeeName</h3>
    </div>
    <div class="panel-body">
        <div class="clearfix"></div>
        @using (Html.BeginForm("Save", "Recommendation"))
        {
            @Html.HiddenFor(m => m.CreatedBy)
            @Html.HiddenFor(m => m.CreationDate)
            <div class="form-group">
                <input type="hidden" name="Id" id="Id" value="@Model.Id" />
                <input type="hidden" name="EmployeeId" id="EmployeeId" value="@Model.EmployeeId" />
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Recommendation)
                @Html.TextAreaFor(m => m.Recommendation, new { @class = "form-control" })
            </div>
            @if (Model.IsWithActiveSeason)
            {
                <button type="submit" class="btn btn-success">Submit Recommendation</button>
            }
            else
            {
                
            }
        }
    </div>
</div>
